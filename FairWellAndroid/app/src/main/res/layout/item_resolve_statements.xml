<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/pic_resolve"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/profilepic"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/button_resolve"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="Resolve"
        android:textStyle="bold"
        android:background="#BDBDBD"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"

        android:layout_toRightOf="@+id/pic_resolve"
        android:layout_below="@+id/netBalanceText_resolve" />

    <TextView
        android:id="@+id/name_resolve"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Name"
        android:paddingLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/pic_resolve" />

    <TextView
        android:id="@+id/youOweText_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="You Owed:"
        android:paddingLeft="10dp"
        android:layout_below="@+id/name_resolve"
        android:layout_toRightOf="@+id/pic_resolve"/>

    <TextView
        android:id="@+id/heOweText_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="He/She owed:"
        android:paddingLeft="10dp"
        android:layout_below="@+id/youOweText_resolve"
        android:layout_toRightOf="@+id/pic_resolve"/>

    <TextView
        android:id="@+id/netBalanceText_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="Net Balance:"
        android:paddingLeft="10dp"
        android:layout_below="@+id/heOweText_resolve"
        android:layout_toRightOf="@+id/pic_resolve"/>

    <TextView
        android:id="@+id/youOweAmount_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="0.00"
        android:layout_below="@+id/name_resolve"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/heOweAmount_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="0.00"
        android:layout_below="@+id/youOweAmount_resolve"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/netBalanceAmount_resolve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="0.00"
        android:layout_below="@+id/heOweAmount_resolve"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="$ "
        android:layout_above="@+id/heOweAmount_resolve"
        android:layout_toLeftOf="@+id/youOweAmount_resolve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="$ "
        android:layout_above="@+id/netBalanceText_resolve"
        android:layout_toLeftOf="@+id/heOweAmount_resolve" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="$ "
        android:layout_above="@+id/button_resolve"
        android:layout_toLeftOf="@+id/netBalanceAmount_resolve" />

</RelativeLayout>
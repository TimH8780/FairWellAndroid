<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="13dp"
    android:paddingLeft="15dp"
    android:paddingRight="15dp">

    <ImageView
        android:id="@+id/friend_photo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profilepic"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp">

        <TextView
            android:id="@+id/friend_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="FRIEND NAME" />

        <TextView
            android:id="@+id/friend_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_name"
            android:layout_alignParentLeft="true"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Friend Email"/>

        <TextView
            android:id="@+id/confirmResult"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/friend_email"
            android:layout_alignParentLeft="true"
            android:paddingTop="5dp"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:text="Awaiting for confirmation"/>

        <Button
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/button_friend_confirm"
            android:layout_width="105dp"
            android:layout_height="50dp"
            android:layout_below="@+id/friend_email"
            android:layout_toLeftOf="@+id/button_friend_delete"
            android:textSize="12sp"
            android:hint="Confirm Friend Request" />

        <Button
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:id="@+id/button_friend_delete"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/friend_email"
            android:textSize="12sp"
            android:hint="Delete"/>

    </RelativeLayout>

</LinearLayout>
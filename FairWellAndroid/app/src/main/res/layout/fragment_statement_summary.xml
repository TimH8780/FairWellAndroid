<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/EmptyListViewText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:textSize="30sp"
            android:textColor="@color/accent"
            android:text="@string/summary"/>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:stretchColumns="0,1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="Description:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_category"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deadline:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_deadline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Payment:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payment Mode:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted By:"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/com_facebook_blue"/>

                <TextView
                    android:id="@+id/summary_submitBy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"/>

            </TableRow>

        </TableLayout>

        <TableLayout
            android:id="@+id/summary_tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:stretchColumns="0, 1, 2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payer"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

                <TextView
                    android:id="@+id/summary_payee_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Payee"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

                <TextView
                    android:id="@+id/summary_amount_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/purple"/>

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Snapshot"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_dark"/>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/picture"
                    android:adjustViewBounds="true"
                    android:layout_gravity="center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Additional Note"
                    android:gravity="center"
                    android:layout_gravity="top"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/red_dark"/>

                <TextView
                    android:id="@+id/summary_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textSize="15sp"/>

            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp">

            <Button
                android:id="@+id/summary_cancelButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:text="Cancel"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/summary_modifyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:text="Modify"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/summary_submitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:text="Submit"
                android:textStyle="bold"
                android:textSize="18sp" />

            <Button
                android:id="@+id/summary_deleteButton"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:text="Delete Statement"
                android:textStyle="bold"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/summary_confirmButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonDark"
                    android:background="@color/buttonMedium"
                    android:textColor="@color/textLight"
                    android:text="Confirm Statement"
                    android:layout_marginRight="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/summary_rejectButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/buttonDark"
                    android:background="@color/buttonMedium"
                    android:textColor="@color/textLight"
                    android:text="Reject Statement"
                    android:layout_marginLeft="5dp"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/resolve_Option_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="50dp">

            <Button
                android:id="@+id/denyPendingPaymentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:text="Deny Payment"
                android:layout_marginRight="5dp"
                android:textStyle="bold"
                android:textSize="14sp"/>

            <Button
                android:id="@+id/confirmPendingPaymentButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/buttonDark"
                android:background="@color/buttonMedium"
                android:textColor="@color/textLight"
                android:layout_marginLeft="5dp"
                android:text="Confirm Payment"
                android:textStyle="bold"
                android:textSize="14sp"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        style="@style/GenericProgressBackground_Transparent"
        android:id="@+id/loadingPanel"

        android:visibility="gone">

        <ProgressBar
            android:id="@+id/loadingIcon"
            style="@style/GenericProgressIndicator"/>

    </RelativeLayout>

</FrameLayout>
</ScrollView>
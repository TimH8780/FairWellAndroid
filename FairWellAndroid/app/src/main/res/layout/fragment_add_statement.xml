<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:drawablePadding="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:id="@+id/statement_description"
            android:hint="Description of event"
            android:inputType="textCapWords"
            android:maxLength="30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="left"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Amount:"
                android:layout_weight="1"/>

            <TextView
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$"/>

            <EditText
                android:id="@+id/moneyAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="numberDecimal"
                android:gravity="right"
                android:maxLength="7"
                android:hint="0.00"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:id="@+id/text0"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/coolBackground"
                android:background="@color/green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CATEGORY"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/icon_1"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_1"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_2"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_2"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_3"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_3"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_4"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_4"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_5"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_5"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_6"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_6"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

                <ImageView
                    android:id="@+id/icon_7"
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_7"
                    android:clickable="true"
                    android:onClick="iconClick"
                    android:layout_weight="1"/>

            </LinearLayout>

            <TextView
                android:id="@+id/clickText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:text="Select Category"
                android:textSize="12sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:id="@+id/text1"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"
                android:textColor="@color/coolBackground"
                android:background="@color/orange_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PAYER AND SPLIT MODE"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Spinner
                    android:popupBackground="@color/green_light"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <Spinner
                    android:popupBackground="@color/green_light"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:id="@+id/spinner2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:id="@+id/text2"
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp"
                android:textColor="@color/coolBackground"
                android:background="@color/blue_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="EVENT AND DUE DATE"
                android:textSize="15sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:textColor="#000"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/dateFieldButton"
                    android:background="@color/windowBackground"
                    android:layout_gravity="center"
                    android:text="EVENT DATE"
                    android:gravity="center"
                    android:clickable="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textColor="#000"
                    android:layout_weight="1"
                    android:id="@+id/deadlineFieldButton"
                    android:background="@color/windowBackground"
                    android:layout_gravity="center"
                    android:text="DUE DATE"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="10dp">

            <TextView
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:id="@+id/text3"
                android:layout_marginBottom="10dp"
                android:textColor="@color/coolBackground"
                android:background="@color/coolActionBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MEMBER(S) IN THIS EVENT"
                android:textSize="15sp"/>

            <Button
                android:id="@+id/addMemberButton"
                android:background="@color/windowBackground"
                android:layout_gravity="center"
                android:text="Add Member(s)"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"/>

            <LinearLayout
                android:id="@+id/layout_member_display"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>

        </LinearLayout>

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="20dp">

            <TextView
                android:textStyle="bold"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:drawablePadding="10dp"
                android:paddingLeft="10dp"
                android:gravity="center_vertical"
                android:id="@+id/text4"

                android:layout_marginBottom="10dp"
                android:textColor="@color/coolBackground"
                android:background="@color/green_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ADDITIONAL INFO (OPTIONAL)"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:id="@+id/addSnapshotButton"
                    android:background="@color/windowBackground"
                    android:layout_gravity="center"
                    android:text="add snapshot "
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:padding="5dp"/>

                <Button
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:id="@+id/addNoteButton"
                    android:background="@color/windowBackground"
                    android:layout_gravity="center"
                    android:text="add note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="15sp"
                    android:padding="5dp"/>

            </LinearLayout>

        </LinearLayout>

        cd <Button
            android:id="@+id/confirmButton"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:textColor="@color/coolBackground"
            android:background="@color/orange_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Summary"
            android:textSize="20sp"/>

    </LinearLayout>

</ScrollView>